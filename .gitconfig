[user]
  name = Thomas Duerr
  email = thomduerr@gmail.com
[alias]
  co = checkout
  st = status
  ci = commit
  br = branch
  brs = branch-status
  whatis = show -s --pretty='tformat:%h (%s, %ad)' --date=short
  changes = diff --name-status -r
  diffstat = diff --stat -r
  diff-grep = !git-diff-grep
  sl = shortlog --format='%C(yellow)%s'
  l = log --graph --pretty=format:'%C(red)%h%C(reset) — %C(white)%s%C(reset)%C(green)%d%C(reset) — %C(bold blue)%an%C(reset) %C(yellow)(%ar)%C(reset)' --date-order
  ln = log --pretty=format:'%C(red)%h%C(reset) — %C(white)%s%C(reset)%C(green)%d%C(reset) — %C(bold blue)%an%C(reset) %C(yellow)(%ar)%C(reset)' --date-order --no-merges
  la = log --graph --pretty=format:'%C(red)%h%C(reset) — %C(white)%s%C(reset)%C(green)%d%C(reset) — %C(bold blue)%an%C(reset) %C(yellow)(%ar)%C(reset)' --date-order --all
  lan = log --pretty=format:'%C(red)%h%C(reset) — %C(white)%s%C(reset)%C(green)%d%C(reset) — %C(bold blue)%an%C(reset) %C(yellow)(%ar)%C(reset)' --date-order --all --no-merges
  type = cat-file -t
  dump = cat-file -p
  ls = ls-files
  ign = ls-files -o -i --exclude-standard
  cat = cat-file
  div = divergence
  cl = changelog
  root = !pwd
  ahead = log @{u}...HEAD --graph --decorate --left-right --boundary --pretty=format:'%C(red)%h%C(reset) — %C(white)%s%C(reset)%C(green)%d%C(reset) - %C(bold blue)%an%C(reset) %C(yellow)(%cr)%C(reset)' --abbrev-commit --date=relative
  df = diff --color --color-words --abbrev
  g = grep --break --heading --line-number
  stl = stash list --pretty=format:'%C(blue)%gd %C(red)* %C(yellow)%s'
[color]
  ui = auto
[color "branch"]
  remote = red
  current = green
  upstream = yellow
[color "status"]
  added = green
  changed = yellow
  untracked = red
[core]
  excludesfile = /Users/thomd/.gitignore
  editor = vim
  # make `git rebase` safer on osx
  # see http://www.git-tower.com/blog/make-git-rebase-safe-on-osx
  trustctime = false
[merge]
  tool = vimdiff
[github]
  user = thomd
[push]
  default = simple
[url "https://"]
  insteadOf = git://
[init]
  templatedir = /usr/local/git/share/git-core/templates/
