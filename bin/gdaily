#!/bin/bash
# source: http://readystate4.com/2012/01/09/great-little-bash-snippet-to-summarize-your-daily-git-commits/

NEXT=$(date +%F)
echo "CHANGELOG"
echo ----------------------
git log --no-merges --format="%cd" --date=short | sort -u -r | while read DATE ; do
  echo
  echo [$DATE]
  GIT_PAGER=cat git log --no-merges --format=" * %s" --since=$DATE --until=$NEXT
  NEXT=$DATE
done

# vim:ft=sh

