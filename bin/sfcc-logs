#!/usr/bin/env bash
set -e
[ -n "$DEBUG" ] && set -x

#
# download files from Logs folder
#
# USAGE
#
#    sfcc logs [options] [filename-pattern]
#
# OPTIONS
#
#    -d        downlaod
#    -t N      N days ago (default: today)
#    -I          list instances
#    -i NAME     use NAME as instances (and set as default)
#
# EXAMPLES
#
#    sfcc logs -t 1 custom           // download custom logfiles from yesterday
#

config="$HOME/.sfcc-logs"
basepath="/on/demandware.servlet/webdav/Sites/Logs/"
if [ -f $config ]; then
  host_envname="SFCC_HOST_$(cat $config)"
  host=${!host_envname}
  user_envname="SFCC_USER_$(cat $config)"
  user=${!user_envname}
fi
ago=0

list_instances() {
  local instance=`cat $config`
  echo ''
  env \
    | grep SFCC_HOST \
    | perl -pe 's/^SFCC_HOST_(.*)=(.*)$/\1 \2/g' \
    | awk -v I="$instance" -v G=`tput setaf 2` -v R=`tput sgr0` '{M=" ";if(I == $1){M="*"};printf(" %s %s%s%s#%s\n"), M, G, $1, R, $2 }' \
    | column -t -s '#'
}

while test $# -ne 0; do
  arg=$1
  shift
  case $arg in
    -h|--help)
      cat $0 | sed -n '/^#/p' | sed 1d | sed 's/#/ /g' \
        | perl -pe "s/(USAGE|OPTIONS|EXAMPLES)/$(tput setaf 0)\1$(tput sgr0)/"
      exit 1
      ;;
    -I|--instances)
      list_instances
      exit 0
      ;;
    -i|--instance)
      echo $1 > ${config}
      host_envname="SFCC_HOST_$1"
      host=${!host_envname}
      user_envname="SFCC_USER_$1"
      user=${!user_envname}
      shift
      ;;
    -d|--download)
      download=1
      ;;
    -t|--days-ago)
      ago=$1
      shift
      ;;
    *)
      filepattern=$arg
      ;;
  esac
done

urlfile=`mktemp ./url-XXXXX`
trap "rm $urlfile" EXIT

curl -sN -u "$user" "https://${host}${basepath}" \
  | sed -n '/.*<a href="\(.*\)"><tt>.*/p' \
  | sed 's/.*<a href="\(.*\)"><tt>.*/\1/g' \
  | sed -n /$(date -v -${ago}d +"%Y%m%d")/p \
  | ( [[ $filepattern ]] && sed -n /$filepattern/p || cat ) \
  > $urlfile

if [ $download ]; then
  while read url; do
    echo $url | sed 's/.*\/\(.*\)/\1/g'
    curl -s -u "$user" -O "https://${host}${url}"
  done < $urlfile
else
  echo -e "\n$(tput setaf 2)${host}$(tput sgr0)\n"
  less $urlfile | sed "s/\(${filepattern}\)/$(tput sgr 0 1)$(tput setaf 2)\1$(tput sgr0)/g"
fi

exit 0
