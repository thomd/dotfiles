#!/usr/bin/env bash

# TODO check if backup volume is mounted


FROM="/develop"
TO="/Volumes/Backup/imac"
mkdir -p $TO
echo -e "\n\n\033[32mbackup: $FROM\033[0m"
rsync -a --delete --stats \
  --exclude .git/ \
  --exclude node_modules/ \
  $FROM $TO


FROM="/Users/thomd"
TO="/Volumes/Backup/imac/Users"
mkdir -p $TO
echo -e "\n\n\033[32mbackup: $FROM\033[0m"
rsync -a --delete --stats \
  --exclude .git/ \
  --exclude node_modules/ \
  --exclude Applications/ \
  --exclude Downloads/ \
  --exclude Dropbox/ \
  --exclude Library/ \
  --exclude Mail/ \
  --exclude Movies/ \
  --exclude Music/ \
  --exclude Pictures/ \
  --exclude Public/ \
  --exclude .Trash/ \
  --exclude .virutalbox-vms/ \
  --exclude .vagrant.d/ \
  --exclude .docker/ \
  --exclude .npm/ \
  --exclude .node-gyp/ \
  --exclude .cpan/ \
  --exclude .cabal/ \
  --exclude .gradle/ \
  --exclude .jenkins/ \
  --exclude .m2/ \
  --exclude .p2/ \
  --exclude .atom/ \
  --exclude .gem/ \
  --exclude .ivy2/ \
  --exclude .cordova/ \
  --exclude .heroku/ \
  --exclude .yeoman/ \
  --exclude .mcf/ \
  $FROM $TO


FROM="/opt/repos"
TO="/Volumes/Backup/imac"
mkdir -p $TO
echo -e "\n\n\033[32mbackup: $FROM\033[0m"
rsync -a --delete --stats $FROM $TO


