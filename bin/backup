#!/usr/bin/env bash

FROM="/Users/thomas/"
TO="/Volumes/Backup2/imac-2020/Users/thomas/"
mkdir -p $TO
rsync -aP --stats \
  --include="Documents/***" \
  --include="Desktop/***" \
  --exclude='*' \
  $FROM $TO


FROM="/Users/thomas/Library/ApplicationSupport/AddressBook/"
TO="/Volumes/Backup2/imac-2020/Users/thomas/AddressBook"
mkdir -p $TO
rsync -aP --stats $FROM $TO


FROM="/Users/emma/"
TO="/Volumes/Backup2/imac-2020/Users/emma/"
mkdir -p $TO
rsync -aP --delete --stats \
  --exclude='Library' \
  --exclude='.Trash' \
  $FROM $TO


FROM="/Users/katja/"
TO="/Volumes/Backup2/imac-2020/Users/katja/"
mkdir -p $TO
rsync -aP --delete --stats \
  --exclude='Library' \
  --exclude='.Trash' \
  $FROM $TO


FROM="/Users/lotta/"
TO="/Volumes/Backup2/imac-2020/Users/lotta/"
mkdir -p $TO
rsync -aP --delete --stats \
  --exclude='Library' \
  --exclude='.Trash' \
  $FROM $TO
