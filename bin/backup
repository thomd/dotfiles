#!/usr/bin/env bash

# TODO check if backup volume is mounted


FROM="/Users/duerr/develop"
TO="/Volumes/UserData/duerr/MacBook-Backup"
mkdir -p $TO
echo -e "\n\n\033[32mbackup: $FROM\033[0m"
rsync -a --delete --stats \
  --exclude .git/ \
  --exclude node_modules/ \
  $FROM $TO


FROM="/Users/duerr/Documents"
TO="/Volumes/UserData/duerr/MacBook-Backup"
mkdir -p $TO
echo -e "\n\n\033[32mbackup: $FROM\033[0m"
rsync -a --delete --stats \
  $FROM $TO


FROM="/Users/duerr/git"
TO="/Volumes/UserData/duerr/MacBook-Backup"
mkdir -p $TO
echo -e "\n\n\033[32mbackup: $FROM\033[0m"
rsync -a --delete --stats $FROM $TO

