#!/usr/bin/env bash

[ ! -z "$TMUX" ] && echo -e "\033[38;5;160myou must detach tmux for a new session" 2>&1 && exit 1

list=$(tmux ls)

if [ $? -eq 1 ]; then
  tmux
else
  session=$(echo "$list" | grep attached | cut -d : -f 1)
  if [ -z "$session" ] ; then
    session=$(echo "$list" | head -1 | cut -d : -f 1)
  fi
  tmux new-session -t $session
fi

