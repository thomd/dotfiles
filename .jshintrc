// vim:ft=javascript
{
  "camelcase": true,      // identifiers must be in camelCase
  "asi": true,            // suppress warnings about missing semicolons
  "curly": true,          // require {} for every new block or scope
  "undef": true,          // prohibits the use of explicitly undeclared variables (for spotting leaking and mistyped variables)
  "unused": true,         // warn when you define and never use your variables
  "freeze": true,         // prohibit overwriting prototypes of native objects
  "strict": true,         // require all functions to run in ECMAScript 5's strict mode
  "browser": true,        // allow globals exposed by modern browsers (window, document, etc.)
  "jquery": true,         // allow globals exposed by the jQuery JavaScript library
  "browserify": true,     // allow globals available when using the Browserify tool to build a project
  "mocha": true,          // allow globals exposed by the "BDD" and "TDD" UIs of the Mocha unit testing framework.
  "node": true,
  "devel": true
}
