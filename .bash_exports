# allow less(1) to display colors
export LESS=-RFX

# default editor (if not defined otherwise)
export EDITOR="vim"

export PATH="/Users/duerr/bin:/usr/local/bin:$PATH"

# Java environment
if [ `uname` = Darwin ]; then
  export JAVA_HOME=`/usr/libexec/java_home -v 1.8.0_131`
  export PATH="$PATH:$JAVA_HOME/bin"
fi

# mad(1)
export MAD_PATH="$HOME/.mad"

# Android SDK
export ANDROID_SDK="/Users/duerr/Library/Android/sdk"
