# allow less(1) to display colors
export LESS=-RFX

# default editor (if not defined otherwise)
export EDITOR="vim"

export PATH="/Users/duerr/bin:/usr/local/bin:$PATH"

# Java environment
if [ `uname` = Darwin ]; then
  export JAVA_HOME=`/usr/libexec/java_home -v 1.8.0_131`
  export PATH="$PATH:$JAVA_HOME/bin"
fi

# python REPl
export PYTHONSTARTUP="$HOME/.pythonrc"

# python wirtualenvwrapper
#export WORKON_HOME="$HOME/.virtualenvs"
#[ -f /usr/local/share/python/virtualenvwrapper_lazy.sh ] && source /usr/local/share/python/virtualenvwrapper_lazy.sh

# mad(1)
export MAD_PATH="$HOME/.mad"

# nvm - node version manager
export NVM_DIR="/usr/local/nvm"
export PATH=/usr/local/nvm/versions/node/`cat /usr/local/nvm/alias/default`/bin:$PATH
# lazy sourcing of nvm
function nvm {
  if [ -z $NVM_SOURCED ]; then
    export NVM_SOURCED=true
    source /usr/local/opt/nvm/nvm.sh
  fi
  nvm $@
}

# go
export GOPATH="/Users/duerr/go"
export PATH="$PATH:$GOPATH/bin"
export GOBIN="$GOPATH/bin"

# rust
export PATH="$HOME/.cargo/bin:$PATH"
